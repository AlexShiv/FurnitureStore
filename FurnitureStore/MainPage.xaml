<?xml version="1.0" encoding="utf-8"?>

<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="FurnitureStore.MainPage"
            xmlns:view="clr-namespace:FurnitureStore.view;assembly=FurnitureStore" 
            xmlns:furniturestore="clr-namespace:FurnitureStore" x:DataType="furniturestore:MainPage"
            Title="Hello"
            xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
            android:TabbedPage.ToolbarPlacement="Bottom"
            BackgroundColor="Aqua">
    <NavigationPage Title="Акции" IconImageSource="Promo.svg" IconColor="Red">
        <x:Arguments>
            <view:PromoView IconImageSource="Promo.svg"/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Категории товаров" IconImageSource="Category.svg" IconColor="Red">
        <x:Arguments>
            <view:CategoryView />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Личный кабинет" IconImageSource="PersonalAccount.svg" IconColor="Red">
        <x:Arguments>
            <view:PersonalAccount />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Корзина" IconImageSource="ShoppingCard.svg" IconColor="Red">
        <x:Arguments>
            <view:ShoppingCardView />
        </x:Arguments>
    </NavigationPage>
</TabbedPage>